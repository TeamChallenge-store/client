{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "paths": {
      "~app": ["./app"],
      "~app/*": ["./app/*"],
      "~pages": ["./pages"],
      "~pages/*": ["./pages/*"],
      "~widgets": ["./widgets"],
      "~widgets/*": ["./widgets/*"],
      "~entities": ["./entities"],
      "~entities/*": ["./entities/*"],
      "~features": ["./features"],
      "~features/*": ["./features/*"],
      "~shared": ["./shared"],
      "~shared/*": ["./shared/*"],
      "~root": ["./app/root"],
      "~root/*": ["./app/root/*"],
      "~layout": ["./app/layout"],
      "~layout/*": ["./app/layout/*"],
      "~icons": ["./shared/ui/Icon/icons"],
      "~icons/*": ["./shared/ui/Icon/icons/*"],
      "~lazyPages": ["./app/lazyPages.tsx"],
    },
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
